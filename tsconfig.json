{
  "compilerOptions": {
    "target": "ES6",         // Specify ECMAScript target version
    "module": "UMD",    // Specify module code generation
    "outDir": "./dist/module",      // Output directory
    "rootDir": "./src",      // Root directory (where your TypeScript files are)
    "strict": true,          // Enable all strict type checking options
    "esModuleInterop": true  // Enables CommonJS/AMD/UMD module imports
  },
  "include": [
    "src/**/*.ts"
       ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
